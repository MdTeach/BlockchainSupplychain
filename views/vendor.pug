  body
    include nav
    h1 Vendor Transactions

    div
    form(method='POST' action='vendor')
      input(name='ProductHash', type='text', placeholder='Product Hash')
      br
      input(name='VendorKey', type='text', placeholder='Vendor Key')
      br
      input(name='VendorName', type='text', placeholder='Vendor Name')
      br
      input(name='ReceiverKey', type='text', placeholder='Receiver Key')
      br
      input(name='ReceiverName', type='text', placeholder='Receiver Name')
      br
      input(name='Location', type='text', placeholder='Location')
      br
      input#send(type='submit', value='GO')
   
    div#root

